{
  "name": "promptpilot-pro-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "cross-env PORT=3001 nodemon src/index.ts",
    "lint": "eslint src --ext .ts --max-warnings 50",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:generate": "cross-env PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "npm run db:generate && prisma db push --force-reset",
    "db:reset:test": "cross-env DATABASE_URL=file:./prisma/test.db PRISMA_SQLITE_BASE_DIR=./prisma prisma db push --force-reset",
    "db:seed": "npm run db:generate && ts-node scripts/seed.ts",
    "start:test": "cross-env DATABASE_URL=file:./prisma/test.db PRISMA_SQLITE_BASE_DIR=./prisma NODE_ENV=e2e node dist/index.js",
    "test": "jest --runInBand",
    "test:unit": "jest --config jest.config.unit.js --runInBand",
    "test:integration": "jest --config jest.config.integration.js --runInBand",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^6.16.2",
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "cron-parser": "^5.4.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "prisma": "^6.16.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
